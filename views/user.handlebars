{{#section 'title'}}
	<title>用户管理</title>
{{/section}}
{{#section 'style'}}
	<link href="https://cdn.bootcss.com/datatables/1.10.16/css/dataTables.bootstrap4.min.css" rel="stylesheet">
{{/section}}
<div class="container" id="order">
	<table id="example" class="table table-striped table-bordered table-sm" style="width:100%">
        <thead>
            <tr>
                <th>微信ID</th>
                <th>微信昵称</th>
                <th>用户名</th>
                <th>地址管理</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>微信ID</th>
                <th>微信昵称</th>
                <th>用户名</th>
                <th>地址管理</th>
            </tr>
        </tfoot>
    </table>
</div>
{{#section 'jquery'}}
	<script src="https://cdn.bootcss.com/datatables/1.10.16/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.bootcss.com/datatables/1.10.16/js/dataTables.bootstrap4.min.js"></script>
	<script type="text/javascript">
	$(function () {
		$('#example').DataTable({
			language: {
		        url: '/script/Chinese.json'
		    },
		    ajax:{
		    	url:'/user/getAllUser',
		    	type:'GET'
		    },
		    columns:[
		    	{
		    		data:'ID',
		    		render:function (data,type,row) {
		    			return '<button type="button" class="btn btn-primary btn-sm" onclick="alert(\''+data.ID+'\')">编辑</button>';
		    		}
		    	},
		    	{
		    		data:'WeiXinID'
		    	},
		    	{
		    		data:'WeiXinName'
		    	},
		    	{
		    		data:'UserName'
		    	},
		    	{
		    		data:'ID',
		    	}
		    ]
		});
	});
	</script>
{{/section}}